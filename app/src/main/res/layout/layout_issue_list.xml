<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:id="@+id/cvIssueList"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="5dp"
       app:cardElevation="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       >

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/ivUserProfile"
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/tvUpdatedDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:textSize="10dp"
               android:layout_margin="5dp"
               />

           <TextView
               android:id="@+id/tvUserName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/tvUpdatedDate"
               app:layout_constraintStart_toEndOf="@+id/ivUserProfile"
               android:maxLines="1"
               android:layout_margin="10dp"
               android:textSize="12dp"
               />

       <TextView
           android:id="@+id/tvIssueTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@+id/ivUserProfile"
           app:layout_constraintTop_toBottomOf="@+id/tvUserName"
           android:textSize="12dp"
           android:maxLines="2"
           android:layout_margin="10dp"
           />

           <TextView
               android:id="@+id/tvIssueDescription"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/ivUserProfile"
               app:layout_constraintStart_toStartOf="parent"
               android:maxLength="200"
               android:layout_margin="10dp"
               android:textSize="12dp"
               />

           <Button
               android:id="@+id/btnIssueComments"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="10dp"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:textSize="10dp"
               android:textColor="@color/black"
               android:backgroundTint="@color/white"
               android:text="View Comments"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvIssueDescription"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>